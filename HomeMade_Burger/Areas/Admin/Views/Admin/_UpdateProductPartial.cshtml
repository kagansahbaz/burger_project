@model UpdateProductVM

<h4>Update Product</h4>
<hr />
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @TempData["Message"]
    </div>
}

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="hidden" readonly id="update-product-id" asp-for="ProductID" class="form-control" />
        </div>
        <div class="form-group">
            <input id="update-product-name" asp-for="ProductName" placeholder="Product Name" class="form-control" />
        </div>
        <div class="form-group">
            <input id="update-product-price" asp-for="Price" placeholder="Price" class="form-control" />
        </div>
        <div class="form-group">
            <input id="update-product-photo" asp-for="Photo" placeholder="Photo URL" class="form-control" />
        </div>
        <div class="form-group">
            <input id="update-product-description" asp-for="Description" placeholder="Description" class="form-control" />
        </div>
        <div class="form-group">
            <select id="update-product-categoryId" asp-for="CategoryID" class="form-control" asp-items="ViewBag.Category"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-warning" onclick="UpdateProduct(@Model.ProductID)" />
        </div>
    </div>
</div>
